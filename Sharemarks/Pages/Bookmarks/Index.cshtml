@page
@model Sharemarks.Pages.Bookmarks.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Bookmarks</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bookmark[0].Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookmark[0].Topic)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Bookmark) {
        <tr>
            <td>
                <a href='@string.Format("http://{0}", item.Url)'>@Html.DisplayFor(modelItem => item.Url)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topic.Title)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
