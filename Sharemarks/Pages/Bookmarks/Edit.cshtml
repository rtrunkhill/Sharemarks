@page
@model Sharemarks.Pages.Bookmarks.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Bookmark</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Bookmark.ID" />
            <div class="form-group">
                <label asp-for="Bookmark.Url" class="control-label"></label>
                <input asp-for="Bookmark.Url" class="form-control" />
                <span asp-validation-for="Bookmark.Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bookmark.TopicID" class="control-label"></label>
                <select asp-for="Bookmark.TopicID" class="form-control" asp-items="ViewBag.TopicID"></select>
                <span asp-validation-for="Bookmark.TopicID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
